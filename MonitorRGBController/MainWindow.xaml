<Window x:Class="MonitorRGBController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorRGBController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TestViewModel />
    </Window.DataContext>
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button Name="btnAddUser" Command="{Binding AddTestCommand}">List</Button>
            
        </StackPanel>
        <TextBox Name="txtWindowTitle" Text="{Binding Path=Title }" Width="150" />
        <ListView x:Name="ListViewPerson" ItemsSource="{Binding Path=Tests }">  
            <ListView.ItemTemplate>  
                <DataTemplate>  
                    <StackPanel Orientation="Horizontal">  
                        <TextBlock Text="{Binding Name}"></TextBlock>  
                        <TextBlock Margin="10,0,0,0" Text="{Binding Age}"></TextBlock>  
                    </StackPanel>  
                </DataTemplate>  
            </ListView.ItemTemplate>  
        </ListView>  
    </DockPanel>
</Window>
